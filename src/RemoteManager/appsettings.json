{
  "Server": {
    "Enabled": true,
    "BindIp": "0.0.0.0",
    "Port": 8443,
    "EnableUdpQuic": true
  },
  "Discovery": {
    "Enabled": true,
    "ReceiveEnabled": true,
    "SendEnabled": true
  },
  "Client": {
    "DefaultAgentEndpoint": "https://127.0.0.1:8443"
  },
  "Security": {
    "Mode": "Auto",
    "DevCertPath": "certs/dashboard.pfx",
    "DevCertPassword": "dev",
    "PinningRequired": true,
    "DiscoveryPsk": "dev-psk-please-change"
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [ { "Name": "File", "Args": { "path": "logs/dashboard-.log", "rollingInterval": "Day" } } ]
  }
}
