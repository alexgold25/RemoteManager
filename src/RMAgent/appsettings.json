{
  "Network": {
    "BindIp": "0.0.0.0",
    "Port": 8443,
    "EnableUdpQuic": true,
    "EnableDiscovery": true
  },
  "Security": {
    "Mode": "Auto",
    "DevCertPath": "certs/agent.pfx",
    "DevCertPassword": "dev",
    "DiscoveryPsk": "dev-psk-please-change",
    "ValidityDays": 825,
    "Subject": "CN=RMAgent",
    "AddHostnamesToSAN": true,
    "AddIPsToSAN": true
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [ { "Name": "File", "Args": { "path": "logs/agent-.log", "rollingInterval": "Day" } } ]
  }
}
